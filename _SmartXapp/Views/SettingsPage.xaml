<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinBlockchainApp.Views.SettingsPage"
             BackgroundColor="Black">
    <StackLayout Padding="20">
        <Label Text="Settings" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
        <Button Text="Change Language" Command="{Binding ChangeLanguageCommand}" BackgroundColor="Gray" TextColor="White" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
