<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinBlockchainApp.Views.BlockchainPage"
             BackgroundColor="Black">
    <StackLayout Padding="20">
        <Label Text="Blockchain Starter" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Enter Command" Text="{Binding CommandInput}" BackgroundColor="Gray" TextColor="White" Margin="0,20,0,0" />
        <Button Text="Execute" Command="{Binding ExecuteCommand}" BackgroundColor="LimeGreen" TextColor="Black" Margin="0,20,0,0" />
        <Label Text="{Binding StatusMessage}" FontSize="18" TextColor="White" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
